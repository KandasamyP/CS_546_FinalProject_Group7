<main>
    <div class="pet_info">
        <h1 class="text-centery">Meet {{pet.petName}}!</h1>
        <section class="pet-carousel-bg w-50">
            <div id="carousel-indicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    {{#each pet.petPictures}}
                    <li data-target="#carousel-indicators" data-slide-to="{{@index}}" {{#if @first}} class="active"
                        {{/if}}></li>
                    {{/each}}
                </ol>
                <div class="carousel-inner">
                    {{#each pet.petPictures}}
                    <div class="carousel-item{{#if @first}} active{{/if}}">
                        <img class="img-fluid" src="../../public/images/pets/{{this}}" alt="{{pet.petName}}">
                    </div>
                    {{/each}}
                </div>
                <a class="carousel-control-prev" href="#carousel-indicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-indicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </section>
        <!--<span class="fas fa-heart"></span>-->
        <h3>Animal Type</h3>
        <h5>{{pet.animalType}}</h5>
        <h3>Breeds</h3>
        <h5>{{#each pet.breeds}}{{this}}{{#unless @last}} / {{/unless}}{{/each}}</h5>
        <h3>Sex</h3>
        <h5>{{pet.sex}}</h5>
        <h3>Age Group</h3>
        <h5>{{pet.ageGroup}}</h5>
        <h3>Physical Characteristics</h3>
        <h5>{{#each physicalCharacteristics}}<span class="badge badge-success">{{this}}</span> {{/each}}</h5>
        <h3>Behavior and Lifestyle</h3>
        <h5>{{#each otherFilters}}<span class="badge badge-success">{{this}}</span> {{/each}}</h5>
        <h3>Currently Located</h3>
        <h5>{{pet.currentLocation}}</h5>
        <h3>Biography</h3>
        <h5>{{pet.biography}}</h5>
        <h3>Posted By</h3>
        <h5>{{shelterName}}</h5>
        <h3>Adoption Fee</h3>
        <h5>${{pet.adoptionFee}}</h5>
    </div>
</main>