<main>
    <div class="pet_info">
        <h1>{{pet.petName}}</h1>
        <!--<img src="../../public/images/{{pet.petPictures}}" alt="{{pet.petName}} image" class="pet-pic">-->
        <section class="pet-carousel-bg w-50">
            <div id="carousel-indicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                 {{#each pet.petPictures}}
                    <li data-target="#carousel-indicators" data-slide-to="{{@index}}"{{#if @first}} class="active"{{/if}}></li>
                {{/each}}
                </ol>
                <div class="carousel-inner">
                    {{#each pet.petPictures}}
                    <div class="carousel-item{{#if @first}} active{{/if}}">
                        <img class="img-fluid" src="../../public/images/{{this}}" alt="{{pet.petName}}">
                    </div>
                    {{/each}}
                </div>
                <a class="carousel-control-prev" href="#carousel-indicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-indicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </section>
        <p class="pet-text">Animal Type: {{pet.animalType}}</p>
        <p class="pet-text">Filters: {{#each pet.filters}}{{this}}{{#unless @last}} || {{/unless}}{{/each}}</p>
        <p class="pet-text">Breeds: {{#each pet.breeds}}{{this}}{{#unless @last}} / {{/unless}}{{/each}}</p>
        <p class="pet-text">Sex: {{pet.sex}}</p>
        <p class="pet-text">Currently Located: {{pet.currentLocation}}</p>
        <p class="pet-text">Age Group: {{pet.ageGroup}}</p>
        <p class="pet-text">Biography: {{pet.biography}}</p>
        <p class="pet-text">Posted By: {{shelterName}}</p>
        <p class="pet-text">Adoption Fee: ${{pet.adoptionFee}}</p>
    </div>
</main>