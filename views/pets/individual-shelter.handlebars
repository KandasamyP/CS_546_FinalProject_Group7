    <div class="row"> 
        <div class="col-md-3">
            Overall Rating of Shelter
            <div class="ratings"> <span class="product-rating">4.6</span><span>/5</span>
                <div class="stars"> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> </div>
                <div class="rating-text"> <span>46 ratings & 15 reviews</span> </div>
            </div>
        </div>
        <div class="row col-md-9">

            {{#each shelterDetails.reviews}}
               
                <div>
                    <div class="row">
                        <div>
                            <h3>Reviewer name comes here</h3>
                            <div>
                                <p class="text-left"><span class="text-muted"> {{this.rating}}</span> <span class="fa fa-star star-active ml-3"></span> <span class="fa fa-star star-active"></span> <span class="fa fa-star star-active"></span> <span class="fa fa-star star-active"></span> <span class="fa fa-star star-inactive"></span></p>
                            </div>
                        </div>
                        <div class="">
                            <p class="">{{this.reviewDate}}</p>
                        </div>
                    </div>
                    <div class="row text-left">
                        <p class="content">{{this.reviewBody}}</p>
                    </div>
                </div>
            {{/each}}

        </div>
    </div>


</section>

