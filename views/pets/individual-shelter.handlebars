<section id="individualShelter">
    <h2 class="results_page">{{shelterDetails.name}}</h2>
    <p>{{shelterDetails.biography}}</p>
    <hr />

    <div class="row rowDetail">
        <div class="col-md-6">
            <div class="row">
                <span class="col-md-3">
                    <label>Email:</label>
                </span>
                <span class="col-md-9">
                    {{shelterDetails.email}}
                </span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <span class="col-md-3">
                    <label>Phone:</label>
                </span>
                <span class="col-md-9">
                    {{shelterDetails.phoneNumber}}
                </span>
            </div>
        </div>
    </div>

    <div class="row rowDetail">
        <div class="col-md-6">
            <div class="row">
                <span class="col-md-3">
                    <label>Location:</label>
                </span>
                <span class="col-md-9">
                    {{shelterDetails.location.street}}, {{shelterDetails.location.city}},
                    {{shelterDetails.location.state}}, {{shelterDetails.location.zipCode}}
                </span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <span class="col-md-3">
                    <label>Website:</label>
                </span>
                <span class="col-md-9">
                    {{#each shelterDetails.socialMedia}}
                    <a> {{this}} </a>
                    {{/each}}
                </span>
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-6">
    {{#if geoLocation.latitude}}  
        <iframe src="https://maps.google.com/maps?q={{geoLocation.latitude}}, {{geoLocation.longitude}}&z=15&output=embed" width="360" height="270" frameborder="0" style="border:0"></iframe>
    {{/if}}
    </div>

    <div class="col-md-6">
          <form class="form-horizontal" action="/shelters/addReviews/{{shelterDetails._id}}" method="post">
          <fieldset>
    
            <!-- Message body -->
            <div class="form-group">
              <label class="col-md-3 control-label" for="reviewBody">Your review on this shelter/rescue</label>
              <div class="col-md-9">
                <textarea class="form-control" id="reviewBody" name="reviewBody" placeholder="Please enter your review here..." rows="3"></textarea>
              </div>
            </div>


            <!-- Rating -->
            <div class="form-group">
              <label class="col-md-3 control-label" for="rating">Your rating</label>
              <div class="col-md-9">
                  <input class="form-control" type="number" min="0" max="5" id="rating" name="rating"> 
              </div>
            </div>
        </fieldset>
        <button type="submit" class="btn btn-primary btn-md">Submit</button>
        </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            Overall Rating of Shelter
            <div class="ratings"> <span class="product-rating">4.6</span><span>/5</span>
                <div class="stars"> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i
                        class="fa fa-star"></i> </div>
                <div class="rating-text"> <span>46 ratings & 15 reviews</span> </div>
            </div>
        </div>
        <div class="row col-md-9">

            {{#each shelterDetails.reviews}}

            <div>
                <div class="row">
                    <div>
                        <h3>Reviewer name comes here</h3>
                        <div>
                            <p class="text-left"><span class="text-muted"> {{this.rating}}</span> <span
                                    class="fa fa-star star-active ml-3"></span> <span
                                    class="fa fa-star star-active"></span> <span class="fa fa-star star-active"></span>
                                <span class="fa fa-star star-active"></span> <span
                                    class="fa fa-star star-inactive"></span>
                            </p>
                        </div>
                    </div>
                    <div class="">
                        <p class="">{{this.reviewDate}}</p>
                    </div>
                </div>
                <div class="row text-left">
                    <p class="content">{{this.reviewBody}}</p>
                </div>
            </div>
            {{/each}}

        </div>
    </div>


</section>