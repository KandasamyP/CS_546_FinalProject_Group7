<section id="individualShelter">
    <h2 class="results_page">{{shelterDetails.name}}</h2>
    <p>{{shelterDetails.biography}}</p>
    <hr/>

    <div class="row rowDetail">
        <div class="col-md-6">
            <div class="row">
                <span class="col-md-3">
                    <label>Email:</label> 
                </span>
                <span class="col-md-9">
                    {{shelterDetails.emailAddress}}
                </span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <span class="col-md-3">
                    <label>Phone:</label> 
                </span>
                <span class="col-md-9">
                    {{shelterDetails.phonenumber}}
                </span>
            </div>            
        </div>
    </div>

    <div class="row rowDetail">
        <div class="col-md-6">
            <div class="row">
                <span class="col-md-3">
                    <label>Location:</label> 
                </span>
                <span class="col-md-9">
                    {{shelterDetails.location.streetAddress1}} {{shelterDetails.location.streetAddress2}}, {{shelterDetails.location.city}}, {{shelterDetails.location.stateCode}}, {{shelterDetails.location.zipCode}}
                </span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <span class="col-md-3">
                    <label>Website:</label> 
                </span>
                <span class="col-md-9">
                    {{#each shelterDetails.socialmedia}}
                    <a> {{this}} </a>
                    {{/each}}
                </span>
            </div>
        </div>
    </div>
    <hr/>
   <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.co.uk/maps?f=q&source=s_q&hl=en&geocode=&q=15+Springfield+Way,+Hythe,+CT21+5SH&aq=t&sll=52.8382,-2.327815&sspn=8.047465,13.666992&ie=UTF8&hq=&hnear=15+Springfield+Way,+Hythe+CT21+5SH,+United+Kingdom&t=m&z=14&ll=51.077429,1.121722&output=embed"></iframe> 

