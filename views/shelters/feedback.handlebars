<br>
<title> {{title}}</title>

<div id="error">
    <ul id="errorList"></ul>
</div>

<form method="POST" id="feedback-form">
    <div id="rating">
        <label for="exampleFormControlInput1">How would you rate our website? (1 being the lowest & 5 being the
            highest)</label><br>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadioOptions"
                value="option1">
            <label class="form-check-label" for="inlineRadio1">1</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadioOptions"
                value="option2">
            <label class="form-check-label" for="inlineRadio2">2</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadioOptions"
                value="option3">
            <label class="form-check-label" for="inlineRadio3">3</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadioOptions"
                value="option4">
            <label class="form-check-label" for="inlineRadio4">4</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadioOptions"
                value="option5">
            <label class="form-check-label" for="inlineRadio5">5</label>
        </div>
    </div><br>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Tell us about your experience.</label>
        <textarea class="form-control" id="experience" rows="7" name="experience"></textarea>
        <div id="error">
        </div>

    </div><br>
    <div class="form-group">
        {{#if success}}
        <p class="success">{{success}}</p>
        {{/if}}
    </div>
    <div class="form-group">
        <button id="submit-button" type="submit" class="btn btn-success">Submit</button>
    </div>
</form>
<script src="/public/js/feedback.js"></script>