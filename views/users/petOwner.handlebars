<div class="user-bg container-fluid">
    <div class="row card-header" id="profile-title">
         <h5>Profile</h5>
    </div>
    <div class="row spacing">
        <div class="container-fluid">
            <div class="card" >
                <h5 class="card-header" id="user-photo" >Photo</h4>
                <div class="card-body">  
                    <div class="row">
                        <div class="col-sm-2">
                            <img class="profile-picture rounded-circle" src="../public/images/{{petOwner.profilePicture}}" alt="{{petOwner.fullName.firstName}}" /> 
                        </div> 
                        <div class ="col-sm-10">
                            <p>Choose an image from your computer</p>
                            <button class="btn">Upload</button>
                            <button class="btn">Delete</button>
                        </div> 
                    </div>           
                </div>
                {{!-- alt="{{petOwner.fullName.firstName}}" --}}
            </div>
        </div>
    </div>

    <div class="row spacing">
        <div class="container-fluid">
            <div class="card">
                <h5 class="card-header" id="info">Information</h4>
                <div class="card-body">  
                   <form id ="userInfo" method = "POST" action="/" >
                       <div class="form-group row" id="formSpacing">
                            <label for="email" class="col-sm-6 col-form-label">Email</label>
                            <label for="password" class="col-sm-6 col-form-label">Password</label>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                            <input type="text" class="form-control" id="email" value="{{petOwner.emailAddress}}" placeholder="email"></input>
                            </div>
                             <div class="col-sm-6">
                            <input type="password" class="form-control" id="password" value="{{petOwner.password}}" placeholder="password"></input>
                            </div>
                        </div>

                        <div class="form-group row" id="formSpacing">
                            <label for="firstname" class="col-sm-6 col-form-label">Firstname</label>
                            <label for="lastname" class="col-sm-6 col-form-label">Lastname</label>
                            {{!-- <label for="username" class="col-sm-6 col-form-label">username</label> --}}
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                            <input type="text" class="form-control" id="firstname" value="{{petOwner.fullName.firstName}}" placeholder="firstname"></input>
                            </div>
                             <div class="col-sm-6">
                            <input type="text" class="form-control" id="lastname" value="{{petOwner.fullName.lastName}}" placeholder="lastname"></input>
                            </div>
                        </div>

                        <div class="form-group row" id="formSpacing">
                            <label for="dateOfBirth" class="col-sm-4 col-form-label">Date Of Birth</label>
                            <label for="phoneNumber" class="col-sm-4 col-form-label">Phone Number</label>
                            
                            <label for="zipCode" class="col-sm-4 col-form-label">Zipcode</label>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="dateOfBirth" value="{{petOwner.dateOfBirth}}" placeholder="Date Of Birth"></input>
                            </div>
                            <div class="col-sm-4">
                                <input type="number" class="form-control" id="phoneNumber" value="{{petOwner.phoneNumber}}" placeholder="Phone Number"></input>
                            </div>
                            <div class="col-sm-4">
                                <input type="number" class="form-control" id="zipCode" value="{{petOwner.zipCode}}" placeholder="Zip Code"></input>
                            </div>
                        </div>

                        <div class="form-group row" id="formSpacing">
                            <label for="biography" class="col-sm-12 col-form-label">Biography</label>
                        </div>    
                        <div class="form-group row">
                            <div class="col-sm-12">
                                 <input type="text" class="form-control" id="biography" value="{{petOwner.biography}}" placeholder="biography"></input>
                            </div>
                        </div> 

                        <div class="form-group row">
                            <div class="col-sm-12">
                                <button class="btn btn-primary" id="editData">Edit</button> 
                                <button class="btn btn-success" id="saveData" type="submit">Save</button>
                            </div>
                        </div>   
                    </form>     
                </div>
            </div>
        </div>
    </div>
</div>