<div class="user-bg container-fluid">
    <div class="row spacing">
        <div class="container-fluid">
            <div class="card">
                <h5 class="card-header" id="user-photo">Photo</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-2">
                            {{#if shelterUser.profilePicture}}
                                {{!-- <img class="profile-picture rounded-circle" src="../public/images/shelters/{{shelterUser.profilePicture}}" alt="{{shelterUser.fullName.firstName}}" /> --}}
                                <img class="profile-picture rounded-circle" src="{{shelterUser.profilePicture}}" alt="{{shelterUser.name}}" />
                            {{else}}
                                <img class="profile-picture rounded-circle" src="../public/images/shelters/no_image.png" alt="{{shelterUser.name}}" />
                            {{/if}}
                        </div>
                        <div class="col-sm-10">
                            <p>Choose an image from your computer</p>
                            <button class="btn">Change</button>
                            {{!-- <button class="btn">Delete</button> --}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row spacing">
        <div class="container-fluid">
            <div class="card">
                <h5 class="card-header" id="user-photo">Change Password</h5>
                <div class="card-body">
                    <form id="passwordForm" method="POST" action="/shelterUser/changePassword">
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <label for="password" class="col-form-label">Enter New Password</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="password" class="form-control" name="password" id="password"
                                    value="{{shelterUser.password}}" placeholder="Enter New Password"></input>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <button class="btn btn-primary" id="editPassword">Edit</button>
                                <button class="btn btn-success" id="savePassword" type="submit">Save</button>
                            </div>
                        </div>
                        <div class="form-group row">
                             <div class="col-sm-12">
                                 <p>{{alertMessage}}</p>
                             </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row spacing">
        <div class="container-fluid">
            <div class="card">
                <h5 class="card-header" id="info">Information</h5>
                <div class="card-body">
                    <form id="shelterUserInfo" method="POST" action="/shelterUser" onsubmit="return(validateShelterUserForm());">
                        <div class="form-group row" id="formSpacing">
                            <label for="email" class="col-sm-4 col-form-label">Email id/Username ?</label>
                            <label for="name" class="col-sm-4 col-form-label">Name</label>
                            <label for="phoneNumber" class="col-sm-4 col-form-label">Phone Number</label>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-4">
                                <input type="text" class="form-control" name="email" id="email" value="{{shelterUser.email}}" placeholder="Email"></input>
                            </div>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" name="name" id="name" value="{{shelterUser.name}}" placeholder="Name"></input>
                            </div>
                            <div class="col-sm-4">
                                <input type="number" class="form-control" name="phoneNumber" id="phoneNumber" value="{{shelterUser.phoneNumber}}" placeholder="Phone Number" ></input>
                            </div>
                        </div>

                        <div class="form-group row" id="formSpacing">
                            <label for="street" class="col-sm-4 col-form-label">Street</label>
