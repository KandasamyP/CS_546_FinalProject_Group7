<header>
    <h1>Shelter & Rescue Sign Up Page</h1>
</header>
<main>
    <form method="POST" id="shelterRescue-signupForm" action="/signup/sr">
        <label for="profilePicture">Profile Picture Public URL:</label><br>
        <input type="text" id="profilePicture" name="profilePicture"><br>

        <label for="name">Name:</label><br>
        <input type="text" id="name" name="name"><br>

        <label for="email">Email Address:</label><br>
        <input type="email" id="email" name="email"><br>

        <label for="password">Password:</label><br>
        <input type="password" id="password" name="password"><br>

        <label for="location">Location:</label><br>
        <input type="text" id="location" name="location"><br>

        <label for="biography">Biography:</label><br>
        <input type="text" id="biography" name="biography"><br>

        <label for="phoneNumber">Phone Number:</label><br>
        <input type="number" id="phoneNumber" name="phoneNumber"><br>

        <label for="website">Web Site:</label><br>
        <input type="text" id="website" name="website"><br>

        <label for="socialMedia">Social Media:</label><br>
        <input type="text" id="socialMedia" name="socialMedia"><br>

        <button type="submit">Sign Up</button>
    </form>
</main>